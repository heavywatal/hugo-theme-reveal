{
  "name": "hugo-theme-reveal",
  "version": "0.1.0",
  "description": "Simple theme for Hugo with reveal.js",
  "scripts": {
    "install": "git -C static/ clone --depth=1 https://github.com/hakimel/reveal.js.git",
    "update": "git -C static/reveal.js/ pull",
    "build": "node-sass --output-style=expanded --include-path=static/reveal.js -o static/ sass/",
    "start": "node-sass --output-style=expanded --include-path=static/reveal.js -o static/ -w sass/",
    "test": "http-server -o"
  },
  "repository": "https://github.com/heavywatal/hugo-theme-reveal.git",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^0.11.1",
    "node-sass": "^4.7.2"
  }
}
